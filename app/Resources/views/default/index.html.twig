{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <form action="">
                    
                <div class="pay_wrap">
                    <div class="choose_pay_way_text">
                        Выберите предполагаемый способ оплаты, с помощью которого был произведен платеж:
                    </div>
                    <label for="mobile">
                        <input class="hidden_block" id="mobile" type="radio" name="pay_way" value="mobile">
                        <div class="pay_way">
                            <div class="pay_way_text">
                                С помощью мобильного банка
                            </div>
                            
                            <img src="{{ asset('assets/images/mobile.png') }}" alt="" class="pay_way_image">
                        </div>
                    </label>

                    <label for="internet">
                        <input class="hidden_block" id="internet" type="radio" name="pay_way" value="internet">
                        <div class="pay_way">
                            <div class="pay_way_text">
                                С помощью интернет банка
                            </div>
                            
                            <img src="{{ asset('assets/images/internet.png') }}" alt="" class="pay_way_image">
                        </div>
                    </label>

                    <label for="atm">
                        <input class="hidden_block" id="atm" type="radio" name="pay_way" value="atm">
                        <div class="pay_way">
                            <div class="pay_way_text">
                                С помощью банкомата
                            </div>
                            
                            <img src="{{ asset('assets/images/atm.png') }}" alt="" class="pay_way_image">
                        </div>
                    </label>
                </div>

            </form>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('assets/styles/index.css')}}">
{% endblock %}
